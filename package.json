{
  "name": "liwi-monorepo",
  "private": true,
  "description": "db abstraction",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/liwijs/liwi.git",
  "homepage": "https://github.com/liwijs/liwi",
  "type": "module",
  "engines": {
    "node": ">=14.13.1"
  },
  "packageManager": "yarn@3.2.1",
  "workspaces": [
    "packages/*",
    "@todo-example/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b tsconfig.build.json",
    "checks": "node scripts/check-packages.js",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "clean:build": "(rm -Rf packages/*/dist packages/*/build && rm -Rf @todo-example/*/dist @todo-example/*/build) || true",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "eslint --report-unused-disable-directives --resolve-plugins-relative-to . --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "tsc": "tsc -b",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/(packages|@todo-example)/*/(src|lib)/**/__tests__/**/*.(ts|js|cjs|mjs)?(x)",
      "<rootDir>/(packages|@todo-example)/*/(src|lib)/**/*.test.(ts|js|cjs|mjs)?(x)"
    ],
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ]
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@pob/commitlint-config": "4.3.0",
    "@pob/eslint-config": "49.1.0",
    "@pob/eslint-config-typescript": "49.3.0",
    "@pob/eslint-config-typescript-react": "49.3.1",
    "@pob/lerna-light": "5.2.0",
    "@pob/root": "6.20.0",
    "@types/jest": "27.5.2",
    "check-package-dependencies": "3.5.2",
    "eslint": "8.16.0",
    "jest": "28.1.0",
    "pob-babel": "33.5.0",
    "typescript": "4.7.2"
  }
}
