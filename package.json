{
  "name": "liwi-lerna",
  "private": true,
  "description": "db abstraction",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "git@github.com:liwijs/liwi.git",
  "homepage": "https://github.com/liwijs/liwi",
  "engines": {
    "node": ">=6.5.0"
  },
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run --stream --concurrency=1 build",
    "build:definitions": "lerna run --stream build:definitions",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "generate:docs": "lerna run --parallel --ignore \"*-example\" generate:docs",
    "lint": "lerna run --stream lint",
    "postbuild": "yarn run build:definitions",
    "preversion": "yarn run lint && yarn run build && yarn run build:definitions && yarn run generate:docs",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "test": "lerna run --stream test",
    "typescript-check": "lerna run --parallel typescript-check",
    "watch": "lerna run --parallel --ignore \"*-example\" watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS",
      "post-checkout": "yarnhook",
      "post-merge": "yarnhook",
      "post-rewrite": "yarnhook",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{package.json,packages/*/package.json,,.eslintrc.json}": [
      "prettier --parser json --write",
      "git add"
    ],
    "packages/*/lib/**/*.json": ["prettier --parser json --write", "git add"],
    "packages/*/lib/**/*.js": ["eslint --fix --quiet", "git add"]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "testMatch": [
      "**/src/**/?(*.)test.js?(x)",
      "**/__tests__/**/*.test.js?(x)"
    ],
    "collectCoverageFrom": ["src/**/*.js?(x)"]
  },
  "devDependencies": {
    "@commitlint/cli": "7.2.1",
    "@commitlint/config-conventional": "7.1.2",
    "husky": "1.3.1",
    "lerna": "3.8.1",
    "lint-staged": "8.1.0",
    "pob-release": "4.6.3",
    "typescript": "3.2.2",
    "yarnhook": "0.3.0"
  }
}
