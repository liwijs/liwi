{
  "name": "liwi-monorepo",
  "private": true,
  "version": "12.0.0",
  "description": "db abstraction",
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (http://christophe.hurpeau.com/)",
  "license": "ISC",
  "repository": "https://github.com/liwijs/liwi.git",
  "homepage": "https://github.com/liwijs/liwi",
  "type": "module",
  "packageManager": "yarn@4.9.3",
  "engines": {
    "node": ">=22.14.0"
  },
  "workspaces": [
    "packages/*",
    "@todo-example/*"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -b",
    "checks": "node scripts/check-packages.js",
    "clean": "rm -Rf docs dist test/node6 coverage",
    "clean:build": "yarn workspaces foreach --parallel -A run clean:build",
    "lint": "yarn run lint:prettier && yarn run lint:eslint",
    "lint:eslint": "NODE_OPTIONS=--max_old_space_size=4096 eslint --quiet .",
    "lint:prettier": "pob-root-prettier --check .",
    "lint:prettier:fix": "pob-root-prettier --write .",
    "postinstall": "pob-root-postinstall",
    "test": "TZ=UTC node  --test @(packages|@todo-example)/*/src/**/*.test.ts",
    "test:coverage": "TZ=UTC npx c8 --all --src ./src node  --test @(packages|@todo-example)/*/src/**/*.test.ts",
    "test:coverage:json": "TZ=UTC npx c8 --reporter=json --all --src ./src node  --test @(packages|@todo-example)/*/src/**/*.test.ts",
    "test:coverage:lcov": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=lcov",
    "test:watch": "TZ=UTC node  --test @(packages|@todo-example)/*/src/**/*.test.ts",
    "tsc": "tsc -b",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "browserslist": {
    "production": [
      "defaults",
      "> 0.2%",
      "not ie < 12",
      "not safari < 10",
      "not ios_saf < 10"
    ],
    "modern": [
      "defaults and >1% and supports es6-module"
    ]
  },
  "commitlint": {
    "extends": [
      "@pob/commitlint-config"
    ]
  },
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "@pob/commitlint-config": "10.0.0",
    "@pob/eslint-config": "61.1.0",
    "@pob/eslint-config-typescript": "61.1.0",
    "@pob/eslint-config-typescript-react": "61.1.0",
    "@pob/rollup-esbuild": "7.0.0",
    "@pob/root": "19.2.0",
    "check-package-dependencies": "10.4.1",
    "eslint": "9.35.0",
    "typescript": "5.9.2"
  }
}
