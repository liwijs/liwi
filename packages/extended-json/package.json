{
  "name": "extended-json",
  "version": "12.0.0",
  "description": "extended json with date using reviver",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/liwijs/liwi.git",
    "directory": "packages/extended-json"
  },
  "homepage": "https://github.com/liwijs/liwi",
  "type": "module",
  "engines": {
    "node": ">=22.14.0"
  },
  "sideEffects": false,
  "main": "./dist/index-node22.mjs",
  "types": "./dist/definitions/index.d.ts",
  "module": "./dist/index-browser.es.js",
  "browser": "./dist/index-browser.es.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/definitions/index.d.ts",
      "node": {
        "import": "./dist/index-node22.mjs"
      },
      "browser": {
        "import": "./dist/index-browser.es.js"
      }
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "clean": "yarn clean:build",
    "clean:build": "pob-babel-clean-out dist",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/extended-json",
    "test": "yarn ../../ run test -- packages/extended-json",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "browserslist": {
    "production": [
      "defaults",
      "> 0.2%",
      "not ie < 12",
      "not safari < 10",
      "not ios_saf < 10"
    ]
  },
  "pob": {
    "bundler": "rollup-babel",
    "entries": [
      "index"
    ],
    "envs": [
      {
        "target": "node",
        "version": "22"
      },
      {
        "target": "browser"
      }
    ]
  },
  "prettier": "@pob/root/prettier-config",
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/preset-env": "7.27.2",
    "pob-babel": "43.6.1",
    "typescript": "5.8.3"
  }
}
