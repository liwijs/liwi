{
  "name": "liwi-mongo",
  "version": "12.0.0",
  "description": "mongo implementation for liwi",
  "keywords": [],
  "author": "Christophe Hurpeau <christophe@hurpeau.com> (https://christophe.hurpeau.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/liwijs/liwi.git",
    "directory": "packages/liwi-mongo"
  },
  "homepage": "https://github.com/liwijs/liwi",
  "type": "module",
  "engines": {
    "node": ">=22.18.0"
  },
  "sideEffects": false,
  "main": "./dist/index-node.mjs",
  "types": "./dist/definitions/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/definitions/index.d.ts",
      "node": {
        "import": "./dist/index-node.mjs"
      }
    }
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "yarn clean:build && rollup --config rollup.config.mjs && yarn run build:definitions",
    "build:definitions": "tsc -p tsconfig.json",
    "clean": "yarn clean:build",
    "clean:build": "pob-esbuild-clean-out dist",
    "lint": "yarn run lint:eslint",
    "lint:eslint": "yarn ../.. run eslint --quiet packages/liwi-mongo",
    "watch": "yarn clean:build && rollup --config rollup.config.mjs --watch"
  },
  "pob": {
    "bundler": "rollup-esbuild",
    "entries": [
      "index"
    ],
    "envs": [
      {
        "target": "node",
        "version": "22",
        "omitVersionInFileName": true
      }
    ],
    "typescript": true
  },
  "prettier": "@pob/root/prettier-config",
  "dependencies": {
    "liwi-store": "12.0.0",
    "liwi-subscribe-store": "12.0.0",
    "mingo": "^6.7.2",
    "mongodb": "^6.20.0",
    "nightingale-logger": "^16.0.0"
  },
  "devDependencies": {
    "@pob/rollup-esbuild": "7.3.2",
    "typescript": "5.9.3"
  }
}
